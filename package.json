{
	"author": "Cycling '74",
	"contributors": [
		{
			"name": "Florian Demmer",
			"email": "florian@cycling74.com"
		}
	],
	"description": "Packaged configuration of ESLint Rules according to Cycling '74 guide",
	"devDependencies": {
		"@types/eslint": "^4.16.6",
		"@types/mocha": "^5.2.6",
		"@types/node": "^11.9.5",
		"eslint": "^5.14.1",
		"mocha": "^5.1.1",
		"ts-node": "^8.0.2",
		"typescript": "^3.3.3333"
	},
	"main": "index.js",
	"name": "eslint-config-c74",
	"peerDependencies": {
		"eslint": "^5.14.1",
		"typescript": "^3.3.3333"
	},
	"repository": "Cycling74/eslint-config-c74",
	"readme": "README.md",
	"scripts": {
		"build": "tsc -b",
		"lint": "npm run lint:ts && npm run lint:js",
		"lint:ts": "eslint ./src ./test --config ./.eslintrc.js --ext .ts --no-eslintrc",
		"lint:js": "eslint ./index.js --config ./.eslintrc_js.js ./typescript.js --no-eslintrc",
		"test": "mocha --forbid-only \"test/*.ts\""
	},
	"version": "1.0.0",
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^1.4.2",
		"@typescript-eslint/parser": "^1.4.2",
		"babel-eslint": "^10.0.1"
	}
}
